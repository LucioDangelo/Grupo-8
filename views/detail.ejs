<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>La Guarida del Drag√≥n</title>
    <script src="https://kit.fontawesome.com/ce21b579cc.js" crossorigin="anonymous"></script>
    <link href="https://fonts.googleapis.com/css2?family=Kelly+Slab&family=MedievalSharp&family=Roboto:wght@100&display=swap" rel="stylesheet">
    <link href="/css/styledetail.css" rel="stylesheet">
</head>

<body>
     
       <!-- Navbar -->
       <%- include('./partials/headerNavbar') %>

    <section class="main-container-detail">
            <img class="image-product-detail" src="/img/<%=product.image%>" alt="" width="100%" height="100%">

        <div class="main-product-detail">  
            <h4 class="product-name"><%=product.title%></h4>
            <p class="price-detail">$<%=product.price%></p>
            <p class="description-detail"><%=product.descrip%></p>

                <div class="quantity-and-cart-block">
                <div class="product-quantity-class">
                <label for="product-quantity">Cantidad:</label>
                <input class="p-detail" list="product-quantity1" placeholder="0" id="product-quantity">
                <datalist id="product-quantity1">
                        <option value="0">
                        <option value="1">
                        <option value="2">
                        <option value="3">
                        <option value="4">
                        <option value="5">
                </datalist>

                <!-- <a href="/products/cart?_method=PUT" class="link-ref">-->
                    <input class="add-to-cart" type="submit" value="Agregar al carrito"> <!-- </a> --> 

                <%  if (locals.isLogged) { %>
                <div class="col-12">
                <a href="/products/editProduct/<%=product.id%>?_method=PUT" class="link-ref"><button type="button" class="detail-button">Editar producto</button></a>
                </div>
                <% } %>
                </div>
                </div>
                </div>

    </section>

    <!-- Footer -->
    <%- include('./partials/footer') %>

    <script src="/js/cart.js"></script>
    <script src="/js/order.js"></script>
</body>
</html>