<link href="/css/styleslider.css" rel="stylesheet">

<img name="slider" class="slider1" >

<script>
    window.addEventListener('load', function () {

        var imagenes = [];

        imagenes[0] = 'img/logos1.png';
        imagenes[1] = 'img/logos2.png';
        imagenes[2] = 'img/logos3.png';
        imagenes[3] = 'img/logos4.png';

        var indiceImagenes = 0;

        function cambiarImagenes() {

            document.slider.src = imagenes[indiceImagenes];

            if (indiceImagenes <3) {
                indiceImagenes++;
            } else {
                indiceImagenes = 0;
            }
        }
        setInterval(cambiarImagenes, 6000);
    });
</script>
 